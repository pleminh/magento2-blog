<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="catalog_product_save_after">
        <observer name="gemtoo_blog_article_product" instance="Gemtoo\Blog\Observer\Adminhtml\Article\SaveProductData" />
    </event>
    <event name="adminhtml_catalog_category_tabs">
        <observer name="gemtoo_blog_article_category" instance="Gemtoo\Blog\Observer\Adminhtml\Article\AddCategoryTab" />
    </event>
    <event name="catalog_category_save_after">
        <observer name="gemtoo_blog_article_category" instance="Gemtoo\Blog\Observer\Adminhtml\Article\SaveCategoryData" />
    </event>
</config>
